<script>
    document.addEventListener("DOMContentLoaded", function () {
        const targetElement = document.getElementById("typing-animation");
        const textToType = "veronika hola";
        const typingSpeed = 100;
        const startDelay = 0; // 5 seconds delay

        // Set initial text
        targetElement.textContent = "";

        function typeText(index) {
            if (index <= textToType.length) {
                targetElement.textContent = textToType.substring(0, index);
                setTimeout(function () {
                    typeText(index + 1);
                }, typingSpeed);
            }
        }

        // Start the typing animation after the delay
        setTimeout(function () {
            typeText(0);
        }, startDelay);
    });




    

</script>








